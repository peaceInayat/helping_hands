<p id="notice"><%= notice %></p>

<h1>Listing Zones</h1>
<br>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Number of Orphanages</th>
  </tr>
  </thead>

  <tbody>
  <% @zones.each do |zone| %>
      <tr>
        <td><%= link_to zone.first_name, zone %></td>
        <td><%= zone.email %></td>
        <td><%= zone.orphanages.count %></td>

        <td><%= link_to 'Show', zone %></td>
        <% if can? :update, zone %>
            <td><%= link_to 'Edit', edit_zone_path(zone) %></td>
        <% end %>
        <% if current_user.type == 'Admin' %>
            <td><%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Zone', new_zone_path %>


